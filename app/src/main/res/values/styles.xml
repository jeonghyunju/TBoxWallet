<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="walletTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/walletSecondColor</item>
        <item name="colorPrimaryDark">@color/walletSecondColor</item>
        <item name="colorAccent">@color/walletFirstColor</item>
    </style>

    <style name="buyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/walletFirstColor</item>
        <item name="colorPrimaryDark">@color/walletFirstColor</item>
        <item name="colorAccent">@color/walletSecondColor</item>
    </style>

    <style name="TxTabTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:titleTextColor">@android:color/white</item>
    </style>

</resources>
